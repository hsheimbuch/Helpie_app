<resources>
    <!-- Base application theme. -->
    <style name="Helpie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_disabled</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Button style. -->
        <item name="buttonStyle">@style/HelpieButton</item>

        <!-- Window background. -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="HelpieButton" parent="Widget.MaterialComponents.Button">
        <!-- customize colorButtonNormal for the disable color -->
        <!-- customize colorAccent for the enabled color -->
        <item name="android:textColor">@color/black</item>
        <item name="colorButtonNormal">@color/primary_disabled</item>
        <item name="colorAccent">@color/primary</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>
</resources>